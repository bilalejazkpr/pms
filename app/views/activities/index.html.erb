<p id="notice"><%= notice %></p>

<h1>Listing Activities</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Idproject</th>
      <th>Idresource</th>
      <th>Id client</th>
      <th>Idtechnology</th>
      <th>Start date</th>
      <th>Finish date</th>
      <th>Status</th>
      <th colspan="3" style="text-align:center;">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.idproject %></td>
        <td><%= activity.idresource %></td>
        <td><%= activity.id_client %></td>
        <td><%= activity.idtechnology %></td>
        <td><%= activity.start_date %></td>
        <td><%= activity.finish_date %></td>
        <td><%= activity.status %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

